package repository

import (
	"ca-tech-dojo-go/pkg/cago/model"
	"context"
	"database/sql"
)

// UserRepository ユーザーリポジトリ
type UserRepository interface {
	CreateUser(ctx context.Context, user *model.User, tx *sql.Tx) error
	RunTransaction(f func(tx *sql.Tx) error) error
}

type dbUserRepository struct {
	db *sql.DB
}

// NewDbUserRepository ユーザーリポジトリの作成
func NewDbUserRepository(db *sql.DB) UserRepository {
	return &dbUserRepository{db: db}
}

func (ur *dbUserRepository) RunTransaction(f func(tx *sql.Tx) error) error {
	tx, err := ur.db.Begin()

	if err != nil {
		return err
	}

	err = f(tx)
	if err != nil {
		tx.Rollback()
		return err
	}

	err = tx.Commit()
	if err != nil {
		return err
	}

	return nil
}

func (ur *dbUserRepository) CreateUser(ctx context.Context, user *model.User, tx *sql.Tx) error {
	sql := "INSERT INTO user (name, token, created_at) VALUES (?, ?, ?)"
	_, err := tx.Exec(sql, user.Name, user.Token, user.CreatedAt)
	return err
}
